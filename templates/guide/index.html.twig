{% extends 'base-back.html.twig' %}

{% block title %}Guide index{% endblock %}

{% block body %}
<h1><font face="verdana" size="20px" color="#DD5526">Guides disponibles</font></h1>

<table class="table">
    <div class="row mt">
        <div class="col-md-12">

            <table class="table table-striped table-advance table-hover">

                <h4><i class="fa fa-angle-right"></i> Guides</h4>
                <hr>
                <thead>

                <tr>
                    <th><i class=" fa fa-edit"></i> Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Numero</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for guide in guides %}
            <tr>
                <td>{{ guide.id }}</td>
                <td>{{ guide.nom }}</td>
                <td>{{ guide.prenom }}</td>
                <td>{{ guide.email }}</td>
                <td>{{ guide.numero }}</td>
                <td>
                    <a href="{{ path('app_guide_show', {'id': guide.id}) }}">
                    <button type="button" class="btn btn-round btn-warning">afficher</button></a>

                    <a href="{{ path('app_guide_edit', {'id': guide.id}) }}">
                        <button class="btn btn-success btn-xs"><i class="fa fa-pencil"></i></button></a>
                </td>
              <td> {{ include('guide/_delete_form.html.twig') }} </td>
            </tr>
        </div>
        <!-- /content-panel -->
    </div>
    <!-- /col-md-12 -->
    </div>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_guide_new') }}">
        <button type="button" class="btn btn-round btn-info">ajouter</button></a>
{% endblock %}
